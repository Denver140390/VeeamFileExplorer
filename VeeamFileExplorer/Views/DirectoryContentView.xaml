    <DataGrid ColumnWidth="*"
              HeadersVisibility="Column"
              IsReadOnly="True"
              GridLinesVisibility="None"
              AutoGenerateColumns="False"
              ItemsSource="{Binding Content}" >
        
        <DataGrid.Columns>
            <DataGridTextColumn Header="Name"
                                Binding="{Binding Name}"/>
            <DataGridTextColumn Header="Last Modified"
                                Binding="{Binding ChangedDate, Converter={x:Static converters:DateTimeToStringConverter.Instance}}"/>
            <DataGridTextColumn Header="Extension"
                                Binding="{Binding Extension}"/>
            <DataGridTextColumn Header="Size"
                                Binding="{Binding Size, Converter={x:Static converters:SizeToStringConverter.Instance}}"/>
        </DataGrid.Columns>
